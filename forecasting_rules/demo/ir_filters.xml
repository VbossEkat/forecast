<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data noupdate="1">

        <record id="filter_demo_01" model="ir.filters">
            <field name="name" eval="'(FRD01) '+time.strftime('%Y')+' Partners Credit Limit Forecast order by id (integer)'"/>
            <field name="model_id">res.partner</field>
            <field name="context">{'forecast_order': 'id', 'forecast_value': 'credit_limit'}</field>
            <field name="domain" eval="[
                ('credit_limit', '>', 0.0),
                ('date', '&gt;=', time.strftime('%Y')+'-01-01'),
                ('date', '&lt;=', DateTime.today().strftime('%Y-%m-%d')),
                ]"/>
            <field name="user_id" eval="False"/>
        </record>

        <record id="filter_demo_02" model="ir.filters">
            <field name="name" eval="'(FRD02) '+time.strftime('%Y')+' Partners Credit Limit Forecast order by write_date (datetime)'"/>
            <field name="model_id">res.partner</field>
            <field name="context">{'forecast_order': 'write_date', 'forecast_value': 'credit_limit', 'group_by': ['write_date:day']}</field>
            <field name="domain" eval="[
                ('credit_limit', '>', 0.0),
                ('date', '&gt;=', time.strftime('%Y')+'-01-01'),
                ('date', '&lt;=', DateTime.today().strftime('%Y-%m-%d')),
                ]"/>
            <field name="user_id" eval="False"/>
        </record>

