                        <group string="Simple Moving Average" name="move-average" colspan="4" col="6">
                            <field name="period"/>
                            <newline/>
                            <field name="sma_forecast"/>
                            <field name="sma_ma_error"/>
                            <button name="clear" type="object" string="Clear" context="{'dtype': 'sma'}"/>
                        </group>
                        <group string="Cummulative Moving Average" name="move-average" colspan="4" col="6">
                            <field name="cma_forecast"/>
                            <field name="cma_ma_error"/>
                            <button name="clear" type="object" string="Clear" context="{'dtype': 'cma'}"/>
                        </group>
                        <group string="Weighted Moving Average" name="weighted-move-average" colspan="4" col="6">
                            <field name="wma_forecast"/>
                            <field name="wma_ma_error"/>
                            <button name="clear" type="object" string="Clear" context="{'dtype': 'wma'}"/>
                        </group>
                        <group string="Single, Double, &amp; Triple Exponential Smoothing" name="exp-smoothing" colspan="4" col="4">
                            <group colspan="4" col="4">
                                <field name="exp_alpha"/>
                            </group>
                            <group colspan="4" col="5">
                                <field name="single_forecast"/>
                                <field name="single_ma_error"/>
                                <button name="clear" type="object" string="Clear" context="{'dtype': 'single'}"/>
                                <field name="double_forecast"/>
