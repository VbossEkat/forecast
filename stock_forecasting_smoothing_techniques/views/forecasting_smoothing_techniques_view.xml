                        </group>
                        <group string="Holt's Linear Smotting" name="holt-smoothing" colspan="4" col="4">
                            <group colspan="4" col="2">
                                <field name="holt_period"/>
                                <field name="holt_alpha"/>
                                <field name="beta"/>
                            </group>
                            <group colspan="4" col="6">
