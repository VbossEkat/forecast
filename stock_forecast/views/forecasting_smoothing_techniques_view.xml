<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="stock_forecast_view_form" model="ir.ui.view">
            <field name="name">stock.forecast.view.form</field>
            <field name="model">forecast</field>
            <field name="inherit_id" ref="forecasting_smoothing_techniques.forecasting_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value_ids']" position="before">
                    <div class="row">
                        <div class="col-md-12">
                            <label for="product_tmpl_id" string='Done for product....'/>
                            <h2><field name="product_tmpl_id" required="1"/></h2>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="stock_forecast_view_search" model="ir.ui.view">
            <field name="name">stock.forecast.view.search</field>
            <field name="model">forecast</field>
            <field name="inherit_id" ref="forecasting_smoothing_techniques.forecasting_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="product_tmpl_id"/>
                </xpath>
            </field>
        </record>

        <record id="action_view_stock_forecasting" model="ir.actions.act_window">
            <field name="name">Forecasting by Smoothing Techniques</field>
            <field name="res_model">forecast</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="stock_forecast_view_search"/>
            <field name="domain">[('product_tmpl_id', '=', context.get('product_tmpl_id', False))]</field>
        </record>

    </data>
</openerp>
